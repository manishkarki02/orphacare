# Server
PORT=8000
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:8000/api

# PostgreSQL connection template
# Replace <USER>, <PASSWORD>, <HOST>, <PORT>, <DBNAME>
DATABASE_URL="postgresql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DBNAME>?sslmode=require&channel_binding=require"

# Frontend / API
SWAGGER_HOST=http://localhost:8000
CORS_ORIGIN=http://localhost:5173

# ACCESS TOKEN and REFRESH TOKEN
# Generate secrets locally (example: `openssl rand -hex 64`)
ACCESS_TOKEN_SECRET=<ACCESS_TOKEN_SECRET_PLACEHOLDER>
ACCESS_TOKEN_EXPIRY=3600

REFRESH_TOKEN_SECRET=<REFRESH_TOKEN_SECRET_PLACEHOLDER>
REFRESH_TOKEN_EXPIRY=604800

# SMTP (email) configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=your_email@example.com